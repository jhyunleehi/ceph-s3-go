{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc-7 활성 파일 빌드",
			"command": "/usr/bin/gcc-7",
			"args": [
				"-fdiagnostics-color=always",
				"${file}",
				"-lrados",
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "컴파일러: /usr/bin/gcc-7"
		}
	]
}